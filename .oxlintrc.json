{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["import", "typescript", "react", "jsx-a11y", "next"],
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "pedantic": "off",
    "style": "off",
    "restriction": "off",
    "nursery": "off"
  },
  "rules": {
    "eqeqeq": "error",
    "no-unused-vars": "error",
    "no-console": "warn",
    "react/jsx-key": "error",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "next/no-img-element": "warn",
    "next/no-head-element": "error",
    "import/no-default-export": "off"
  },
  "settings": {
    "next": {
      "rootDir": "."
    },
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "es2024": true,
    "node": true
  },
  "globals": {},
  "ignorePatterns": [
    "node_modules/**",
    ".next/**",
    "dist/**",
    "build/**",
    "out/**",
    "*.config.*",
    "next-env.d.ts"
  ]
}

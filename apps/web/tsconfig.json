{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@vignette-cards/core": ["../../packages/core/dist/index.js"],
      "@vignette-cards/core/*": ["../../packages/core/dist/*.js"],
      "@vignette-cards/themes": ["../../packages/themes/dist/index.js"],
      "@vignette-cards/themes/*": ["../../packages/themes/dist/*.js"],
      "@vignette-cards/canvas-engine": ["../../packages/canvas-engine/dist/index.js"],
      "@vignette-cards/canvas-engine/*": ["../../packages/canvas-engine/dist/*.js"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "dist/types/**/*.ts",
    "dist/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}

{
  "$schema": "./node_modules/oxc/configuration_schema.json",
  "ignorePatterns": [
    "node_modules/**",
    ".next/**",
    "dist/**",
    "build/**",
    "out/**"
  ],
  "experimentalTailwindcss": {
    "config": "./tailwind.config.js",
    "attributes": ["class", "className"],
    "functions": ["clsx", "cn"],
    "preserveDuplicates": false,
    "preserveWhitespace": false
  }
}
